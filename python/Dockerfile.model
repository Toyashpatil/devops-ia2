# python/Dockerfile.model
FROM python:3.10-slim
WORKDIR /app

# install libgomp and minimal build tools (if LightGBM wheel requires)
RUN apt-get update && \
    apt-get install -y --no-install-recommends libgomp1 build-essential && \
    rm -rf /var/lib/apt/lists/*

# copy model server code
COPY model_server.py .

# runtime python deps
RUN pip install --no-cache-dir fastapi uvicorn lightgbm joblib numpy pandas scikit-learn

EXPOSE 8000
CMD ["python", "model_server.py"]
